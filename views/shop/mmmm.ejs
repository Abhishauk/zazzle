                                                                                        <script>
                                                                                            function wishlistIncrement(productid, index) {

                                                                                                let wishcount = parseInt(document.getElementById('wishlistheart').innerHTML)

                                                                                                $.ajax({
                                                                                                    url: '/add_wishlist',
                                                                                                    data: {
                                                                                                        productid: productid
                                                                                                    },
                                                                                                    method: 'post',
                                                                                                    success: (response) => {
                                                                                                        if (response == 1) {

                                                                                                            document.getElementById('wishlistheart').innerHTML = wishcount = wishcount + 1
                                                                                                            $(`.heartlove${index}`).addClass('fa fa-heart')
                                                                                                            Swal.fire({
                                                                                                                position: 'top-end',
                                                                                                                icon: 'success',
                                                                                                                title: 'Product added to wishlist',
                                                                                                                showConfirmButton: false,
                                                                                                                timer: 2000
                                                                                                            })
                                                                                                            console.log(response)
                                                                                                            // alert('added to wishlist')

                                                                                                            // location.reload()

                                                                                                        } else if (response.hh == 1) {
                                                                                                            if (wishcount != 1) {
                                                                                                                document.getElementById('wishlistheart').innerHTML = wishcount = wishcount - 1
                                                                                                                $(`.heartlove${index}`).removeClass('fa fa-heart')
                                                                                                                Swal.fire({
                                                                                                                    position: 'top-end',
                                                                                                                    icon: 'success',
                                                                                                                    title: 'Product removed from wishlist',
                                                                                                                    showConfirmButton: false,
                                                                                                                    timer: 1500
                                                                                                                })

                                                                                                            } else {
                                                                                                                Swal.fire({
                                                                                                                    position: 'top-end',
                                                                                                                    icon: 'success',
                                                                                                                    title: 'Product removed from wishlist',
                                                                                                                    showConfirmButton: false,
                                                                                                                    timer: 1500
                                                                                                                })
                                                                                                                document.getElementById('wishlistheart').innerHTML = 0
                                                                                                                $(`.heartlove${index}`).removeClass('fa fa-heart')

                                                                                                            }
                                                                                                        } else if (response.null) {
